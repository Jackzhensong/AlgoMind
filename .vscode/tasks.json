{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++",
			"command": "g++",
			"args": [
				"-g",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
	]
}